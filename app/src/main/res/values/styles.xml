<resources>

    <!-- App Theme -->
    <style name="Theme.FitnessApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
    <style name="Theme.Scratch.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/darker_gray</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:font">@font/poppins_regular</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="font">@font/poppins_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="UserInfoText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Bold Text -->
    <style name="TextBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Regular Text -->
    <style name="TextRegular">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">#565656</item>
    </style>

    <!-- Schedule Title -->
    <style name="ScheduleTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Time Text -->
        <style name="TimeText">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Label Text -->
    <style name="LabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Transparent Buttons with Rounded Corners -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorSurface</item>
    </style>

</resources>
