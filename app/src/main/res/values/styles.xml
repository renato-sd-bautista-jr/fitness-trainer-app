<resources>

    <!-- App Theme -->
    <style name="Theme.FitnessApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <!-- Bold Text -->
    <style name="TextBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Regular Text -->
    <style name="TextRegular">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">#565656</item>
    </style>

    <!-- Schedule Title -->
    <style name="ScheduleTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Time Text -->
    <style name="TimeText">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Label Text -->
    <style name="LabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Transparent Buttons with Rounded Corners -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorSurface</item>
    </style>

</resources>
