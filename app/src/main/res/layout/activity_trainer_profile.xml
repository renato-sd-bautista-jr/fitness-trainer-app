<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9"
    tools:context=".TrainerProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Trainer Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvTrainerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainer Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/tvTrainerProficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proficiency"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvTrainerContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Info"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvTrainerRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: N/A"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Selected Date and Set Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selected Date: None"
                android:textSize="16sp"
                android:textColor="#333333" />


        </LinearLayout>

        <!-- List of Available Dates -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Dates"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/listViewAvailableDates"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:dividerHeight="1dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:divider="@android:color/darker_gray"
            android:padding="8dp" />

        <!-- Available Time Slots -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Time Slots"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerAvailableTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Book Now Button -->
        <Button
            android:id="@+id/btnBookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:textColor="#FFFFFF"
            android:backgroundTint="#43A047"
            android:layout_marginBottom="24dp" />

        <!-- Weekly Schedule Display -->
        <TextView
            android:id="@+id/trainerSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule will appear here..."
            android:textSize="14sp"
            android:textColor="#555555"
            android:background="@drawable/bg_card_rounded"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
