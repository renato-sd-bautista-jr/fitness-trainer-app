<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Scratch">
        <!-- LauncherActivity (App Entry Point) -->
        <activity
            android:name=".LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity as the launcher activity -->
        <activity android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>


        <!-- RegisterActivity -->
        <activity android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>

        <!-- DashboardActivity -->
        <activity android:name=".DashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>

        <!-- HomeDashboardActivity -->
        <activity android:name=".HomeDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>

        <!-- Activity Schedule -->
        <activity android:name=".ScheduleActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>

        <!-- Activity Workouts -->
        <activity android:name=".WorkoutActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>

        <!-- Activity Trainers -->
        <activity android:name=".TrainerActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>


        <activity android:name=".TrainerListActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>

        <activity android:name=".TrainerProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>

        <activity android:name=".ConfirmationActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>
        <activity android:name=".ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>
        <activity android:name=".RegisterTrainerActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>
        <activity android:name=".SettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>
        <activity android:name=".UserProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>
        <activity android:name=".CreateGoalActivity"
            android:exported="true"
            android:theme="@style/Theme.Scratch.NoActionBar"/>




    </application>
</manifest>
